---
interface Frontmatter {
  title: string;
  description: string;
  pubDate: string;
}

interface Post {
  url: string;
  frontmatter: Frontmatter;
}

const { posts } = Astro.props as { posts: Post[] };
---

<ul class="list-disc pl-5 space-y-2">
  {posts.map((post) => (
    <li>
      <a href={post.url} class="text-blue-600 hover:underline">
        {post.frontmatter.title}
      </a>
    </li>
  ))}
</ul>
