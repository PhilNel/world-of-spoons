---
interface Props {
  title: string;
  description: string;
  imagePath: string;
}

const { title, description, imagePath } = Astro.props;
---

<div class="relative h-96 mb-8 rounded-lg overflow-hidden">
  <img 
    src={imagePath} 
    alt={title}
    class="w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent">
    <div class="absolute bottom-0 left-0 p-8">
      <h1 class="text-4xl font-bold text-white mb-2">{title}</h1>
      <p class="text-white/90">{description}</p>
    </div>
  </div>
</div> 